// AI Agentê°€ í¬í•¨í•´ì•¼ í•  ì„±ëŠ¥ ëª¨ë‹ˆí„°ë§ ì½”ë“œ
export const usePerformanceMonitoring = () => {
  useEffect(() => {
    // Core Web Vitals ëª¨ë‹ˆí„°ë§
    const observer = new PerformanceObserver((list) => {
      list.getEntries().forEach((entry) => {
        if (entry.entryType === 'navigation') {
          const navEntry = entry as PerformanceNavigationTiming;
          console.log('í˜ì´ì§€ ë¡œë“œ ì‹œê°„:', navEntry.loadEventEnd - navEntry.fetchStart, 'ms');
        }
        
        if (entry.entryType === 'largest-contentful-paint') {
          console.log('LCP:', entry.startTime, 'ms');
        }
      });
    });

    observer.observe({ entryTypes: ['navigation', 'largest-contentful-paint'] });

    return () => observer.disconnect();
  }, []);
};

// Supabase ì¿¼ë¦¬ ì„±ëŠ¥ ëª¨ë‹ˆí„°ë§
export const useSupabaseQueryMonitoring = () => {
  const monitorQuery = async <T>(
    queryName: string,
    queryFn: () => Promise<T>
  ): Promise<T> => {
    const startTime = performance.now();
    
    try {
      const result = await queryFn();
      const duration = performance.now() - startTime;
      
      console.log(`ğŸ” ${queryName} ì¿¼ë¦¬ ì‹¤í–‰ ì‹œê°„:`, duration.toFixed(2), 'ms');
      
      if (duration > 1000) {
        console.warn(`âš ï¸ ${queryName} ì¿¼ë¦¬ê°€ ëŠë¦½ë‹ˆë‹¤ (${duration.toFixed(2)}ms)`);
      }
      
      return result;
    } catch (error) {
      const duration = performance.now() - startTime;
      console.error(`âŒ ${queryName} ì¿¼ë¦¬ ì‹¤íŒ¨ (${duration.toFixed(2)}ms):`, error);
      throw error;
    }
  };

  return { monitorQuery };
};
```

