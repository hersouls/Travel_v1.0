// AI Agentê°€ ìƒì„±í•´ì•¼ í•  í‘œì¤€ ì—ëŸ¬ ì²˜ë¦¬ íŒ¨í„´
export const createErrorHandler = (context: string) => {
  return (error: unknown): string => {
    console.error(`${context} ì‹¤íŒ¨:`, error);
    
    // Supabase ì—ëŸ¬ ì²˜ë¦¬
    if (error && typeof error === 'object' && 'message' in error) {
      const supabaseError = error as { message: string; code?: string };
      
      // ì¼ë°˜ì ì¸ Supabase ì—ëŸ¬ ë©”ì‹œì§€ í•œêµ­ì–´ ë³€í™˜
      switch (supabaseError.code) {
        case 'PGRST116':
          return 'í•´ë‹¹ ë°ì´í„°ë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.';
        case '23505':
          return 'ì´ë¯¸ ì¡´ì¬í•˜ëŠ” ë°ì´í„°ì…ë‹ˆë‹¤.';
        case '42501':
          return 'ì ‘ê·¼ ê¶Œí•œì´ ì—†ìŠµë‹ˆë‹¤.';
        default:
          return supabaseError.message;
      }
    }
    
    // ë„¤íŠ¸ì›Œí¬ ì—ëŸ¬ ì²˜ë¦¬
    if (error instanceof TypeError && error.message.includes('fetch')) {
      return 'ë„¤íŠ¸ì›Œí¬ ì—°ê²°ì„ í™•ì¸í•´ì£¼ì„¸ìš”.';
    }
    
    // ì¼ë°˜ ì—ëŸ¬ ì²˜ë¦¬
    if (error instanceof Error) {
      return error.message;
    }
    
    return 'ì•Œ ìˆ˜ ì—†ëŠ” ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤.';
  };
};

// ì‚¬ìš© ì˜ˆì‹œ
const subscriptionErrorHandler = createErrorHandler('êµ¬ë… ê´€ë¦¬');

try {
  await addSubscription(subscriptionData);
} catch (error) {
  const errorMessage = subscriptionErrorHandler(error);
  // ì‚¬ìš©ìì—ê²Œ ì¹œí™”ì ì¸ ì—ëŸ¬ ë©”ì‹œì§€ í‘œì‹œ
  toast.error(errorMessage);
}
